<% layout('layouts/boilerplate') %>

    <div class="row mt-3 justify-content-center">
        <div class="col-lg-8">

            <!-- Title -->
            <h3 class="card-title">
                <%= listing.title %>
            </h3>

            <!-- Listing Card -->
            <div class="card mb-4 listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing_image">
                <div class="card-body">
                    <p class="card-text">
                        <i><b class="card-bold">Owned By:</b> <%= listing.owner.username %></i><br>
                        <b class="card-bold">Description:</b><%= listing.description %><br>
                             <b class="card-bold">Price:</b>PKR <%= listing.price.toLocaleString("en-PK") %> <i>/night</i><br>
                                <b class="card-bold">Location:</b><%= listing.location %> &nbsp; <%= listing.country %>
                                   
                    </p>
                </div>
            </div>

            <!-- Owner Buttons -->
            <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
                <div class="d-flex gap-2 mb-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn edit-btn">Delete</button>
                    </form>
                </div>
                <% } %>

                    <!-- Review Form -->
                    <% if (currUser) { %>
                        <div class="mb-4">
                            <hr />
                            <h4>Leave a Review</h4>
                            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate
                                class="needs-validation">

                                <fieldset class="starability-slot mb-3">
                                    <legend>First rating:</legend>
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="second-rate1" name="review[rating]" value="1" />
                                    <label for="second-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="second-rate2" name="review[rating]" value="2" />
                                    <label for="second-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="second-rate3" name="review[rating]" value="3" />
                                    <label for="second-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="second-rate4" name="review[rating]" value="4" />
                                    <label for="second-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="second-rate5" name="review[rating]" value="5" />
                                    <label for="second-rate5" title="Amazing">5 stars</label>
                                </fieldset>

                                <div class="mb-3">
                                    <label for="comment" class="form-label">Comments</label>
                                    <textarea name="review[comment]" id="comment" cols="30" rows="4"
                                        class="form-control" required></textarea>
                                    <div class="invalid-feedback">Please add a review</div>
                                </div>
                                <button class="btn edit-btn">Submit</button>
                            </form>
                        </div>
                        <% } %>

                            <!-- Reviews List -->
                            <% if (listing.reviews.length> 0) { %>
                                <div class="mb-4">
                                    <hr />
                                    <h4>Reviews</h4>
                                    <div class=" row">
                                        <% for (let review of listing.reviews) { %>
                                            <div class=" review-card card col-md-5 m-2">
                                                <div class="card-body">
                                                    <h5 class="card-title">@<%= review.author.username %>
                                                    </h5>
                                                    <p class="starability-result card-text"
                                                        data-rating="<%= review.rating %>"></p>
                                                    <p class="card-text">
                                                        <%= review.comment %>
                                                    </p>
                                                </div>
                                                <form method="POST"
                                                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                    class=" review-card p-2">
                                                    <button class="btn btn-sm edit-btn">Delete</button>
                                                </form>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                                <% } %>

                                    <!-- Map -->
                                    <div class="mb-4">
                                        <h3>Where You'll Be</h3>
                                        <div id="map" style="height: 400px;" id="map" style="height: 400px;"
                                            data-lng="<%= listing.coordinates.lng %>"
                                            data-lat="<%= listing.coordinates.lat %>" data-title="<%= listing.title %>">
                                        </div>

                                    </div>

        </div>
    </div>
    <script src="/js/map.js"></script>